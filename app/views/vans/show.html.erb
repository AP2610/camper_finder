
<div class="container">

  <div class="image-van">
    <%= cl_image_tag(@van.photo) %>
  </div>

  <div class="van-details mb-5">
    <div class="header">
      <div>
        <h2><%= @van.title %></h2>
        <span class="font-weight-light address"> <p ><%= @van.address %></p></span>


        <div class="van_summary">
          <span class="czm8crp"><%= @van.van_model %> </span>
          <span class="aria-hidden="true> · </span>
          <span class="czm8crp"> <%= @van.sleeping_capacity %> persons </span>
          <span class="aria-hidden="true> · </span>
          <span class="czm8crp"> <%= @van.price %>€/per night </span>
        </div>
      </div>
      <!--       if photo.exists? -->
      <div><%= (cl_image_tag @van.user.photo, class: 'avatar') if @van.user.photo %></div>
    </div>

    <div class="van_description">
      <hr>
      <span><strong>Van description</strong></span>
      <span> <%= @van.description %></span>
    </div>
  </div>


<!-- div of the review of that van -->

  <div class="van-reviews mb-5">
    <h2 class= "py-3"> Reviews of the vans</h2>

    <% if @van.reviews.empty?  %>
      <p>No reviews yet for this van</p>

    <% else %>

      <% @van.reviews.each do |review| %>

          <div class="card-product mb-3">
            <%= cl_image_tag review.booking.user.photo, alt: review.booking.user.first_name %>

            <div class="card-product-infos">
              <h2>
                <%= review.booking.user.first_name %>
              </h2>
              <p>
                <%= review.booking.start_date.strftime("%b") %>
                <%= review.booking.start_date.strftime("%Y") %>
              </p>
              <div class="van-review-content line-clamp">
                <%= review.content %>
              </div>
            </div>

          </div>
      <% end %>

    <% end %>
  </div>


<!-- div of the form to add a booking -->

  <div class="form-wrapper" style="width: 600px">
    <h2>Book this Van</h2>
    <%= simple_form_for([@van, @booking]) do |f| %>
      <%= f.input :start_date, as: :string, required: false, input_html: {class: "datepicker"} %>
      <%= f.input :end_date, as: :string, required: false, input_html: {class: "datepicker"} %>
      <%= f.input :pax, collection: [1,2,3,4],input_html: {class: "beautiful-dropdown" }, include_hidden: false %>
      <%= f.button :submit, "Go", class: "btn-van-list" %>
    <% end %>
  </div>

</div>
