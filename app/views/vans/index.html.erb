<h1 class="title-van">Find your ideal campervan</h1>

<div class="form-search" id="form-search-van-index">
  <div class="">
    <%= form_tag vans_path, method: :get do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-search-input",
        placeholder: "Enter a destination"
        %>
  </div>
  <div class="form-search-btn">
    <%= submit_tag "Search", class: "btn-van-list btn-search" %>
  </div>
  <% end %>
</div>


    <div class="content">
      <div class="cards">


        <% @vans.each do |van| %>
          <div class="card">
            <%= link_to van_path(van) do  %>
              <div class="card-trip">
                <%= cl_image_tag van.photo %>
                <div class="card-trip-infos">
                  <%=van.van_model%> -
                  <%=van.sleeping_capacity%>
                  <div class="title-text"><%=van.title%></div>
                </div>
              <h2 class="card-trip-pricing">
                <%=van.price %>â‚¬/per night
              </h2>
            </div>
          <% end %>
        </div>
     <% end %>
    </div>
  </div>


      <div
    id="map"
    style="
    width: 400px;
    height: 600px;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
  ></div>
    </div>
