<h1 class="title-van">Camper Vans to stay</h1>


    <div class="content">
      <div class="cards">


        <% @vans.each do |van| %>
          <div class="card">
            <%= link_to van_path(van) do  %>
              <div class="card-trip">
                <%= cl_image_tag van.photo %>
                <div class="card-trip-infos">
                  <%=van.van_model%> -
                  <%=van.sleeping_capacity%>
                  <div class="title-text"><%=van.title%></div>
                </div>
                <h2 class="card-trip-pricing">
                  <%=van.price_cents %>â‚¬/per night
                </h2>
              </div>
            <% end %>
          </div>
       <% end %>
      </div>


      <div
    id="map"
    style="
    width: 400px;
    height: 600px;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
  ></div>
    </div>
